{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "spring": {
        "application": {
            "name": "sprints-service"
        }
    },

    "eureka": {
        "client": {
            "serviceUrl": "http://localhost:8761/eureka/",
            "shouldRegisterWithEureka": true,
            "shouldFetchRegistry": false
        },
        "instance": {
            "hostname": "localhost",
            "nonSecurePort": 8084,
            "leaseRenewalIntervalInSeconds": 30,
            "leaseExpirationDurationInSeconds": 90
        }
    },

    "ConnectionStrings": {
        "DefaultConnection": "Host=localhost;Port=5432;Database=TaskFlowDB;Username=postgres;Password=postgres;Search Path=sprints_service_schema"
    }
}